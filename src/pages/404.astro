---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="404 - Page Not Found | ZafTech">
  <div class="min-h-screen flex items-center justify-center bg-bg">
    <div class="text-center px-4">
      <h1 class="text-9xl font-bold text-accent mb-4">404</h1>
      <h2 class="text-3xl font-semibold text-ink mb-4">Page Not Found</h2>
      <p class="text-ink-muted mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="/"
          class="rounded-full bg-accent px-8 py-3 text-sm font-semibold text-contrast shadow-soft hover:opacity-90 transition-opacity"
        >
          Go Home
        </a>
        <a
          href="/#contact"
          class="rounded-full border border-ink/30 dark:border-white/30 px-8 py-3 text-sm font-semibold text-ink dark:text-white hover:bg-ink/5 dark:hover:bg-white/5 transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>
</Layout>