---
<Layout title="ZafTech | Web and RAG Studio">
  <div class="bg-bg text-ink" id="page-top">
    <header class="fixed inset-x-0 top-0 z-40 border-b border-white/10 transition-all duration-300" style="background-color: rgba(0, 0, 0, 0); backdrop-filter: blur(0px);">
      <div class="relative mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
        <div class="flex items-center gap-3">
          <div class="flex h-11 w-11 items-center justify-center rounded-xl bg-white text-black shadow-soft">
            Z
          </div>
          <div>
            <p class="text-base font-semibold text-white">ZafTech</p>
          </div>
        </div>
        <nav
          class="absolute left-1/2 top-1/2 hidden -translate-y-1/2 items-center gap-6 text-sm font-semibold text-white/70 lg:flex"
          aria-label="Primary"
          data-nav-root
        >
          {nav.map((item) => (
            <a
              class="nav-link transition hover:text-white"
              href={item.href}
              data-nav={item.href.replace("#", "")}
            >
              {item.label}
            </a>
          ))}
          <span class="nav-indicator" aria-hidden="true"></span>
        </nav>
      </div>
    </header>

    <main>
      <section id="hero" class="relative w-full overflow-hidden">
        <div class="absolute inset-0">
          <Threads
            client:only="react"
            color={[1, 1, 1]}
            amplitude={1}
            distance={0}
            enableMouseInteraction={true}
          />
          <div class="absolute inset-0 bg-hero-overlay"></div>
          <div class="hero-fade absolute inset-x-0 bottom-0 h-[12vh]"></div>
        </div>
        <div class="relative z-10 mx-auto grid min-h-screen max-w-6xl gap-10 px-4 text-white lg:grid-cols-[1.1fr,0.9fr]" style="padding-top: 160px; padding-bottom: 100px;">
          <div class="space-y-6">
            <p class="inline-flex items-center gap-2 rounded-full bg-white/20 px-3 py-1 text-xs font-semibold uppercase tracking-[0.2em]">
              Full service digital studio
            </p>
            <h1 class="text-4xl font-semibold leading-tight md:text-5xl">
              We craft landing experiences that convert and scale.
            </h1>
            <p class="text-lg text-white/80">
              Strategy, design, and delivery for web platforms, product UX, and RAG assistants.
            </p>
            <div class="flex flex-wrap gap-3">
              <a
                href="#features"
                class="rounded-full bg-accent px-6 py-3 text-sm font-semibold text-contrast shadow-soft"
              >
                Learn more
              </a>
              <a
                href="#contact"
                class="rounded-full border border-white/60 px-6 py-3 text-sm font-semibold text-white"
              >
                Start a project
              </a>
            </div>
          </div>
          <div class="flex flex-col justify-between gap-6 rounded-3xl bg-white/10 p-6">
            <div>
              <p class="text-sm font-semibold">Launch snapshot</p>
              <p class="mt-2 text-sm text-white/70">2-4 week delivery with measurable lift.</p>
            </div>
            <div class="grid gap-3 sm:grid-cols-2">
              <div class="rounded-2xl bg-white/20 p-4">
                <p class="text-xs uppercase tracking-wide text-white/70">Conversion</p>
                <p class="text-xl font-semibold">+42%</p>
              </div>
              <div class="rounded-2xl bg-white/20 p-4">
                <p class="text-xs uppercase tracking-wide text-white/70">Support deflection</p>
                <p class="text-xl font-semibold">35%</p>
              </div>
            </div>
            <div class="rounded-2xl bg-white/10 p-4 text-sm text-white/70">
              Weekly demos, clear milestones, and ongoing care.
            </div>
          </div>
        </div>
      </section>

      <section id="features" class="bg-surface py-16">
        <div class="mx-auto max-w-6xl px-4">
          <div class="text-center">
            <p class="text-sm font-semibold text-accent">Features</p>
            <h2 class="text-3xl font-semibold">A landing system built to perform.</h2>
            <p class="mt-2 text-ink-muted">Everything you need to launch and optimize fast.</p>
          </div>
          <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
            {features.map((feature, index) => (
              <div class={`rounded-3xl bg-surface-2 p-6 shadow-card reveal delay-${index + 1}`} key={feature.title}>
                <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-contrast text-white">
                  {index + 1}
                </div>
                <p class="text-lg font-semibold">{feature.title}</p>
                <p class="mt-2 text-sm text-ink-muted">{feature.body}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="about" class="py-16">
        <div class="mx-auto grid max-w-6xl items-center gap-10 px-4 lg:grid-cols-[1fr,1.1fr]">
          <div class="overflow-hidden rounded-4xl bg-surface shadow-card">
            <Image
              src={aboutImage}
              alt="Design and strategy planning session"
              width={1200}
              height={900}
              widths={[480, 768, 960, 1200]}
              format="webp"
              quality={70}
              loading="lazy"
              decoding="async"
              class="h-full w-full object-cover"
              sizes="(min-width: 1024px) 45vw, 100vw"
            />
          </div>
          <div class="space-y-4">
            <p class="text-sm font-semibold text-accent">About us</p>
            <h2 class="text-3xl font-semibold">A studio that owns outcomes.</h2>
            <p class="text-ink-muted">
              We blend strategy, design, and engineering into one dedicated pod. Every engagement
              includes senior direction, weekly check-ins, and clear success metrics.
            </p>
            <div class="grid gap-3 sm:grid-cols-2">
              {[
                "Strategy and UX",
                "RAG knowledge design",
                "Performance builds",
                "Analytics and CRO",
              ].map((item) => (
                <div class="rounded-2xl bg-surface px-4 py-3 text-sm font-semibold shadow-card" key={item}>
                  {item}
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

      <section id="services" class="bg-surface py-16">
        <div class="mx-auto max-w-6xl px-4">
          <div class="text-center">
            <p class="text-sm font-semibold text-accent">Services</p>
            <h2 class="text-3xl font-semibold">One team for web, product, and RAG.</h2>
            <p class="mt-2 text-ink-muted">Flexible packages designed for speed and clarity.</p>
          </div>
          <div class="mt-10 grid gap-6 md:grid-cols-3">
            {services.map((service) => (
              <div class="rounded-3xl bg-surface-2 p-6 shadow-card" key={service.title}>
                <h3 class="text-xl font-semibold">{service.title}</h3>
                <p class="mt-3 text-sm text-ink-muted">{service.body}</p>
                <a class="mt-4 inline-flex text-sm font-semibold text-accent" href="#contact">
                  Learn more
                </a>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="portfolio" class="py-16">
        <div class="mx-auto max-w-6xl px-4">
          <div class="text-center">
            <p class="text-sm font-semibold text-accent">Gallery</p>
            <h2 class="text-3xl font-semibold">Proof across web, product, and AI.</h2>
            <p class="mt-2 text-ink-muted">Recent launches and client moments.</p>
          </div>
          <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {gallery.map((item, index) => (
              <div class={`group overflow-hidden rounded-3xl bg-surface shadow-card reveal delay-${index + 1}`} key={item.title}>
                <div class="relative h-56 overflow-hidden">
                  <div class="absolute inset-0">
                    <Image
                      src={item.image}
                      alt={item.title}
                      width={900}
                      height={600}
                      widths={[320, 480, 640, 800]}
                      format="webp"
                      quality={65}
                      loading="lazy"
                      decoding="async"
                      class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
                      sizes="(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw"
                    />
                  </div>
                  <div class="absolute inset-0 bg-black/30 opacity-0 transition group-hover:opacity-100"></div>
                </div>
                <div class="p-5">
                  <p class="text-xs font-semibold uppercase tracking-wide text-ink-muted">{item.tag}</p>
                  <p class="mt-2 text-lg font-semibold">{item.title}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="team" class="bg-surface py-16">
        <div class="mx-auto max-w-6xl px-4">
          <div class="text-center">
            <p class="text-sm font-semibold text-accent">Team</p>
            <h2 class="text-3xl font-semibold">Meet the team behind the builds.</h2>
          </div>
          <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
            {team.map((member) => (
              <div class="overflow-hidden rounded-3xl bg-surface-2 text-center shadow-card" key={member.name}>
                <Image
                  src={member.image}
                  alt={member.name}
                  width={600}
                  height={800}
                  widths={[240, 320, 480, 640]}
                  format="webp"
                  quality={65}
                  loading="lazy"
                  decoding="async"
                  class="h-48 w-full object-cover"
                  sizes="(min-width: 1024px) 25vw, (min-width: 768px) 50vw, 100vw"
                />
                <div class="p-5">
                  <p class="text-base font-semibold">{member.name}</p>
                  <p class="text-sm text-ink-muted">{member.role}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="testimonials" class="py-16">
        <div class="mx-auto max-w-6xl px-4">
          <div class="text-center">
            <p class="text-sm font-semibold text-accent">Testimonials</p>
            <h2 class="text-3xl font-semibold">What teams say after launch.</h2>
          </div>
          <div class="mt-10 grid gap-6 md:grid-cols-3">
            {testimonials.map((testimonial) => (
              <div class="rounded-3xl bg-surface p-6 shadow-card" key={testimonial.name}>
                <div class="flex items-center gap-3">
                  <Image
                    src={testimonial.image}
                    alt={testimonial.name}
                    width={96}
                    height={96}
                    widths={[48, 96]}
                    format="webp"
                    quality={65}
                    loading="lazy"
                    decoding="async"
                    class="h-12 w-12 rounded-full object-cover"
                    sizes="48px"
                  />
                  <div>
                    <p class="text-sm font-semibold">{testimonial.name}</p>
                    <p class="text-xs text-ink-muted">{testimonial.role}</p>
                  </div>
                </div>
                <p class="mt-4 text-sm text-ink-muted">{testimonial.quote}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="contact" class="bg-surface py-16">
        <div class="mx-auto max-w-5xl px-4">
          <div class="grid gap-8 rounded-[28px] border border-border bg-surface p-6 shadow-card lg:grid-cols-[1fr,1.1fr] lg:p-8">
            <div class="space-y-4">
              <p class="text-sm font-semibold text-accent">Contact</p>
              <h3 class="text-2xl font-semibold">Let's build your next launch.</h3>
              <p class="text-sm text-ink-muted">
                Share your goals and we will respond within 12 hours with next steps.
              </p>
              <div class="grid gap-3">
                <div class="rounded-2xl bg-surface-2 p-4">
                  <p class="text-xs uppercase tracking-wide text-ink-muted">Email</p>
                  <p class="mt-2 text-sm font-semibold">hello@zaftech.com</p>
                </div>
                <div class="rounded-2xl bg-surface-2 p-4">
                  <p class="text-xs uppercase tracking-wide text-ink-muted">Phone</p>
                  <p class="mt-2 text-sm font-semibold">+1 123 456 1234</p>
                </div>
                <div class="rounded-2xl bg-surface-2 p-4">
                  <p class="text-xs uppercase tracking-wide text-ink-muted">Location</p>
                  <p class="mt-2 text-sm font-semibold">San Francisco, CA</p>
                </div>
              </div>
            </div>
            <div class="rounded-3xl bg-surface-2 p-6">
              <form class="grid gap-4" method="post" action="/api/contact" data-contact-form>
                <div class="grid gap-3 md:grid-cols-2">
                  <input
                    class="rounded-full border border-input-border bg-input-bg px-4 py-2.5 text-sm text-input-text placeholder:text-input-placeholder focus:outline-none focus:ring-2 focus:ring-accent"
                    placeholder="Name"
                    type="text"
                    name="name"
                    required
                  />
                  <input
                    class="rounded-full border border-input-border bg-input-bg px-4 py-2.5 text-sm text-input-text placeholder:text-input-placeholder focus:outline-none focus:ring-2 focus:ring-accent"
                    placeholder="Email"
                    type="email"
                    name="email"
                    required
                  />
                </div>
                <textarea
                  class="min-h-[120px] rounded-2xl border border-input-border bg-input-bg px-4 py-3 text-sm text-input-text placeholder:text-input-placeholder focus:outline-none focus:ring-2 focus:ring-accent"
                  placeholder="Tell us about the project"
                  name="message"
                  required
                ></textarea>
                <button
                  class="w-fit rounded-full bg-accent px-6 py-2.5 text-sm font-semibold text-contrast"
                  type="submit"
                >
                  Send message
                </button>
                <p class="text-xs text-ink-muted" data-form-status>
                  Prefer email? We reply within 12 hours.
                </p>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="border-t border-border py-8">
      <div class="mx-auto flex max-w-6xl flex-wrap items-center justify-between gap-4 px-4 text-sm text-ink-muted">
        <p> &copy; 2026 ZafTech. All rights reserved.</p>
        <div class="flex gap-4">
          <a href="#features" class="hover:text-ink">Features</a>
          <a href="#portfolio" class="hover:text-ink">Gallery</a>
          <a href="#contact" class="hover:text-ink">Contact</a>
        </div>
      </div>
    </footer>
  </div>

  <script is:inline>
    // Navbar scroll effect
    const header = document.querySelector("header");

    const updateNavbar = () => {
      const scrollY = window.scrollY;

      if (scrollY > 50) {
        header.style.backgroundColor = "rgba(0, 0, 0, 0.6)";
        header.style.backdropFilter = "blur(32px)";
      } else {
        header.style.backgroundColor = "rgba(0, 0, 0, 0)";
        header.style.backdropFilter = "blur(0px)";
      }
    };

    window.addEventListener("scroll", updateNavbar, { passive: true });
    updateNavbar(); // Initial call

    const navRoot = document.querySelector("[data-nav-root]");
    const indicator = navRoot?.querySelector(".nav-indicator");
    const links = Array.from(document.querySelectorAll("[data-nav]"));
    const sections = links
      .map((link) => document.querySelector(`#${link.dataset.nav}`))
      .filter(Boolean);
    const hero = document.querySelector("#hero");
    const observed = [...sections, hero].filter(Boolean);
    const ratios = new Map();
    let observer;

    const setActive = (id) => {
      links.forEach((link) => {
        link.classList.toggle("is-active", link.dataset.nav === id);
      });
      updateIndicator();
    };

    const updateIndicator = () => {
      if (!navRoot || !indicator) {
        return;
      }
      const active = navRoot.querySelector(".nav-link.is-active");
      if (!active) {
        indicator.style.opacity = "0";
        indicator.style.width = "0px";
        return;
      }
      const rect = active.getBoundingClientRect();
      const navRect = navRoot.getBoundingClientRect();
      const left = rect.left - navRect.left;
      indicator.style.opacity = "1";
      indicator.style.width = `${rect.width}px`;
      indicator.style.transform = `translateX(${left}px)`;
    };

    const syncNavOffset = () => {
      const header = document.querySelector("header");
      const offset = header ? header.offsetHeight + 16 : 88;
      document.documentElement.style.setProperty("--nav-offset", `${offset}px`);
      return offset;
    };

    const createObserver = () => {
      const offset = syncNavOffset();
      if (observer) {
        observer.disconnect();
      }
      observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            ratios.set(entry.target.id, entry.isIntersecting ? entry.intersectionRatio : 0);
          });

          const sorted = Array.from(ratios.entries()).sort((a, b) => b[1] - a[1]);
          const [id, ratio] = sorted[0] ?? [];

          if (!id || ratio === 0 || id === "hero") {
            setActive(null);
            return;
          }
          setActive(id);
        },
        {
          rootMargin: `-${offset}px 0px -55% 0px`,
          threshold: [0.05, 0.2, 0.5],
        }
      );

      observed.forEach((section) => observer.observe(section));
    };

    let resizeTimer;
    window.addEventListener("resize", () => {
      window.clearTimeout(resizeTimer);
      resizeTimer = window.setTimeout(() => {
        createObserver();
        updateIndicator();
      }, 120);
    });

    createObserver();
    updateIndicator();

    const form = document.querySelector("[data-contact-form]");
    const status = document.querySelector("[data-form-status]");

    if (form) {
      form.addEventListener("submit", async (event) => {
        event.preventDefault();
        if (status) {
          status.textContent = "Sending...";
        }
        const formData = new FormData(form);
        const payload = Object.fromEntries(formData.entries());

        try {
          const response = await fetch("/api/contact", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(payload),
          });

          if (!response.ok) {
            throw new Error("Failed to submit");
          }

          form.reset();
          if (status) {
            status.textContent = "Thanks! We'll be in touch shortly.";
          }
        } catch (error) {
          if (status) {
            status.textContent = "Something went wrong. Please email hello@zaftech.com.";
          }
        }
      });
    }
  </script>
</Layout>

