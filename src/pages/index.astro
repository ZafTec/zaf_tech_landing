---
import Layout from "@/layouts/Layout.astro";

const nav = [
  { label: "Features", href: "#features" },
  { label: "About", href: "#about" },
  { label: "Services", href: "#services" },
  { label: "Gallery", href: "#portfolio" },
  { label: "Testimonials", href: "#testimonials" },
  { label: "Contact", href: "#contact" },
];

const metrics = [
  { label: "Launch time", value: "2-4 weeks" },
  { label: "Support deflection", value: "Up to 40%" },
  { label: "Care plans", value: "Design and build" },
];

const features = [
  {
    title: "Conversion ready",
    body: "Messaging, UX, and speed tuned for measurable pipeline lift.",
  },
  {
    title: "RAG aligned",
    body: "Assistants grounded in your knowledge base and brand voice.",
  },
  {
    title: "Senior delivery",
    body: "Senior product, design, and engineering on every engagement.",
  },
  {
    title: "Care included",
    body: "Post launch optimization, analytics, and continuous upgrades.",
  },
];

const services = [
  {
    title: "Web platforms and apps",
    body: "Marketing sites, portals, and product dashboards that convert.",
    items: ["SEO ready", "A11y focused", "Performance tuned"],
  },
  {
    title: "RAG assistants",
    body: "Support and sales copilots trained on your docs and content.",
    items: ["Ticket deflection", "Knowledge search", "Brand safe"],
  },
  {
    title: "UX and product design",
    body: "Research, prototyping, and design systems built to scale.",
    items: ["Design systems", "Usability", "Prototyping"],
  },
];

const gallery = [
  { title: "Launch campaign", tag: "Go to market" },
  { title: "Customer portal", tag: "Client ops" },
  { title: "AI support hub", tag: "RAG" },
  { title: "Product refresh", tag: "UX" },
  { title: "Pricing engine", tag: "Growth" },
  { title: "Sales enablement", tag: "B2B" },
];

const testimonials = [
  {
    quote:
      "ZafTech shipped our new site fast and tied it directly to revenue. The pipeline lift was immediate.",
    name: "Taylor Morgan",
    role: "VP Growth, Northwind",
  },
  {
    quote:
      "Their RAG rollout reduced ticket load and finally gave support a clean knowledge flow.",
    name: "Rafael Diaz",
    role: "Head of Support, Signal Loop",
  },
  {
    quote:
      "Every touchpoint felt intentional. The redesign improved activation in weeks.",
    name: "Jamie Lee",
    role: "Product Lead, Forge",
  },
];

const process = [
  "Discovery and scope",
  "Experience blueprint",
  "Pilot in 2-4 weeks",
  "Launch and ongoing care",
];

const offers = [
  {
    title: "Launch ready site",
    body: "Messaging, design, build, and analytics for your flagship site.",
  },
  {
    title: "RAG support sprint",
    body: "Scope and ship a support bot in two to four weeks.",
  },
  {
    title: "Experience refresh",
    body: "Redesign key funnels or dashboards to lift conversion.",
  },
];
---
<Layout title="ZafTech | Web and RAG Studio">
  <div class="relative">
    <div class="pointer-events-none absolute -top-40 left-10 h-64 w-64 rounded-full bg-emerald-200/40 blur-[120px]"></div>
    <div class="pointer-events-none absolute top-20 right-0 h-64 w-64 rounded-full bg-blue-200/50 blur-[140px]"></div>

    <header class="sticky top-0 z-30 border-b border-white/60 glass">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-4">
        <div class="flex items-center gap-3">
          <div class="flex h-11 w-11 items-center justify-center rounded-2xl bg-slate-900 text-white shadow-soft">
            Z
          </div>
          <div>
            <p class="text-base font-semibold">ZafTech</p>
            <p class="text-sm text-slate-500">Web, product, and RAG delivery</p>
          </div>
        </div>
        <nav class="hidden items-center gap-6 text-sm font-medium text-slate-700 md:flex" aria-label="Primary">
          {nav.map((item) => (
            <a class="transition hover:text-slate-900" href={item.href}>{item.label}</a>
          ))}
          <a
            class="rounded-full bg-slate-900 px-4 py-2 text-white shadow-soft transition hover:translate-y-[-1px]"
            href="#contact"
          >
            Book a review
          </a>
        </nav>
        <a
          class="rounded-full bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-soft md:hidden"
          href="#contact"
        >
          Start
        </a>
      </div>
    </header>

    <main class="mx-auto max-w-6xl px-4 pb-20">
      <section class="grid items-center gap-10 pb-12 pt-16 lg:grid-cols-[1.1fr,0.9fr]">
        <div class="space-y-6">
          <p class="inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-xs font-semibold text-emerald-700 shadow-card">
            Full service web and software studio
          </p>
          <h1 class="font-display text-4xl leading-tight text-slate-900 md:text-5xl">
            Web and RAG that win attention.
          </h1>
          <p class="text-lg text-slate-600">
            Conversion ready sites, product experiences, and assistants that remove support friction.
          </p>
          <div class="flex flex-wrap gap-3">
            <a
              href="#contact"
              class="rounded-full bg-emerald-600 px-6 py-3 text-sm font-semibold text-white shadow-soft transition hover:translate-y-[-1px]"
            >
              Book a discovery call
            </a>
            <a
              href="#services"
              class="rounded-full border border-slate-300 px-6 py-3 text-sm font-semibold text-slate-800 transition hover:border-slate-400"
            >
              View services
            </a>
          </div>
          <div class="grid gap-4 pt-4 sm:grid-cols-3">
            {metrics.map((metric) => (
              <div class="rounded-2xl bg-white px-4 py-5 shadow-card" key={metric.label}>
                <p class="text-xs uppercase tracking-wide text-slate-500">{metric.label}</p>
                <p class="text-lg font-semibold text-slate-900">{metric.value}</p>
              </div>
            ))}
          </div>
        </div>

        <div class="relative">
          <div class="absolute -top-8 -left-6 h-24 w-24 rounded-full bg-emerald-200/70 blur-3xl"></div>
          <div class="absolute -bottom-8 -right-6 h-24 w-24 rounded-full bg-blue-200/70 blur-3xl"></div>
          <div class="relative rounded-[32px] bg-white p-6 shadow-soft">
            <div class="flex items-center justify-between">
              <p class="text-sm font-semibold text-slate-700">Delivery snapshot</p>
              <span class="rounded-full bg-emerald-100 px-3 py-1 text-xs font-semibold text-emerald-700">Live</span>
            </div>
            <div class="mt-4 grid grid-cols-3 gap-3 text-center text-sm">
              <div class="rounded-2xl bg-slate-50 p-4">
                <p class="text-xs text-slate-500">Launch timeline</p>
                <p class="text-lg font-semibold text-slate-900">2-4 weeks</p>
              </div>
              <div class="rounded-2xl bg-slate-50 p-4">
                <p class="text-xs text-slate-500">Support deflection</p>
                <p class="text-lg font-semibold text-slate-900">+40%</p>
              </div>
              <div class="rounded-2xl bg-slate-50 p-4">
                <p class="text-xs text-slate-500">CSAT lift</p>
                <p class="text-lg font-semibold text-slate-900">+18 pts</p>
              </div>
            </div>
            <div class="mt-6 space-y-4 rounded-2xl border border-slate-100 p-4">
              <p class="text-sm font-semibold text-slate-800">Performance signals</p>
              <div class="grid gap-4 sm:grid-cols-2">
                <div class="rounded-xl bg-slate-50 p-3">
                  <p class="text-xs text-slate-500">Traffic to leads</p>
                  <div class="mt-3 h-2 w-full overflow-hidden rounded-full bg-slate-200">
                    <div class="h-2 w-4/5 rounded-full bg-emerald-500"></div>
                  </div>
                  <p class="mt-2 text-xs font-semibold text-emerald-600">+42% conversion</p>
                </div>
                <div class="rounded-xl bg-slate-50 p-3">
                  <p class="text-xs text-slate-500">Tickets resolved</p>
                  <div class="mt-3 h-2 w-full overflow-hidden rounded-full bg-slate-200">
                    <div class="h-2 w-2/3 rounded-full bg-blue-500"></div>
                  </div>
                  <p class="mt-2 text-xs font-semibold text-emerald-600">35% fewer tickets</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="features" class="space-y-8 py-12">
        <div class="flex flex-wrap items-center justify-between gap-4">
          <div>
            <p class="text-sm font-semibold text-emerald-700">Features</p>
            <h2 class="text-3xl font-semibold text-slate-900">A landing system built to convert.</h2>
          </div>
          <a
            href="#contact"
            class="hidden rounded-full border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-800 transition hover:border-slate-400 md:inline-flex"
          >
            Talk to the team
          </a>
        </div>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
          {features.map((feature, index) => (
            <div class={`rounded-3xl bg-white p-5 shadow-card reveal delay-${index + 1}`} key={feature.title}>
              <p class="text-lg font-semibold text-slate-900">{feature.title}</p>
              <p class="mt-3 text-sm text-slate-600">{feature.body}</p>
            </div>
          ))}
        </div>
      </section>

      <section id="about" class="grid items-center gap-10 py-12 lg:grid-cols-[1fr,1.1fr]">
        <div class="space-y-4">
          <p class="text-sm font-semibold text-emerald-700">About</p>
          <h2 class="text-3xl font-semibold text-slate-900">A studio that owns outcomes.</h2>
          <p class="text-slate-600">
            We blend strategy, design, and engineering into one tight pod. Clients come to us
            when they need a partner that ships quickly and stays accountable to real metrics.
          </p>
          <div class="flex flex-wrap gap-2">
            {[
              "Strategy and UX",
              "RAG knowledge design",
              "Performance builds",
              "Analytics and CRO",
              "Ongoing care",
            ].map((item) => (
              <span class="rounded-full bg-white px-3 py-1 text-xs font-semibold text-slate-700 shadow-card" key={item}>{item}</span>
            ))}
          </div>
        </div>
        <div class="relative">
          <div class="absolute inset-0 translate-x-4 translate-y-4 rounded-[32px] bg-emerald-100"></div>
          <div class="relative aspect-[4/3] rounded-[32px] border border-white/70 bg-gradient-to-br from-slate-900 via-slate-800 to-emerald-800 p-6 text-white shadow-soft">
            <div class="flex h-full flex-col justify-between">
              <div>
                <p class="text-xs uppercase tracking-[0.2em] text-emerald-200">ZafTech Signal</p>
                <h3 class="mt-2 font-display text-2xl">We build experiences people trust.</h3>
              </div>
              <div class="grid gap-3 sm:grid-cols-2">
                <div class="rounded-2xl bg-white/10 p-3">
                  <p class="text-xs text-emerald-100">Average launch</p>
                  <p class="text-lg font-semibold text-white">21 days</p>
                </div>
                <div class="rounded-2xl bg-white/10 p-3">
                  <p class="text-xs text-emerald-100">NPS lift</p>
                  <p class="text-lg font-semibold text-white">+24</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="services" class="space-y-8 py-12">
        <div class="flex flex-wrap items-center justify-between gap-4">
          <div>
            <p class="text-sm font-semibold text-emerald-700">Services</p>
            <h2 class="text-3xl font-semibold text-slate-900">One team for web, product, and RAG.</h2>
          </div>
          <a
            href="#contact"
            class="hidden rounded-full border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-800 transition hover:border-slate-400 md:inline-flex"
          >
            Start a project
          </a>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          {services.map((service) => (
            <div class="rounded-3xl bg-white p-6 shadow-card" key={service.title}>
              <div class="flex items-center justify-between">
                <h3 class="text-xl font-semibold text-slate-900">{service.title}</h3>
                <span class="flex h-10 w-10 items-center justify-center rounded-2xl bg-emerald-50 text-emerald-700">
                  >
                </span>
              </div>
              <p class="mt-3 text-sm text-slate-600">{service.body}</p>
              <ul class="mt-4 space-y-2 text-sm text-slate-600">
                {service.items.map((item) => (
                  <li class="flex items-center gap-2" key={item}>
                    <span class="h-2 w-2 rounded-full bg-emerald-500"></span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>

      <section class="grid gap-6 py-12 lg:grid-cols-[1fr,1.1fr]">
        <div class="space-y-4">
          <p class="text-sm font-semibold text-emerald-700">Starter offers</p>
          <h2 class="text-3xl font-semibold text-slate-900">Low friction ways to start together.</h2>
          <p class="text-slate-600">Clear scope, fixed timelines, and visible results.</p>
          <a
            href="#contact"
            class="inline-flex rounded-full bg-slate-900 px-5 py-3 text-sm font-semibold text-white shadow-soft transition hover:translate-y-[-1px]"
          >
            Get a slot this week
          </a>
        </div>
        <div class="grid gap-4">
          {offers.map((offer) => (
            <div class="flex items-start gap-4 rounded-3xl bg-white p-5 shadow-card" key={offer.title}>
              <div class="mt-1 flex h-10 w-10 items-center justify-center rounded-2xl bg-emerald-50 text-emerald-700">
                ok
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900">{offer.title}</h3>
                <p class="mt-2 text-sm text-slate-600">{offer.body}</p>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section class="rounded-[32px] bg-gradient-to-r from-emerald-50 via-white to-blue-50 px-6 py-10">
        <div class="mx-auto max-w-4xl space-y-8">
          <div class="flex flex-wrap items-center justify-between gap-4">
            <div>
              <p class="text-sm font-semibold text-emerald-700">Delivery</p>
              <h2 class="text-3xl font-semibold text-slate-900">Clear process, visible checkpoints.</h2>
            </div>
            <span class="rounded-full bg-white px-4 py-2 text-xs font-semibold text-slate-700 shadow-card">
              Weekly demos, roadmaps, SLAs
            </span>
          </div>
          <div class="grid gap-4 md:grid-cols-4">
            {process.map((step, index) => (
              <div class="rounded-2xl bg-white/80 p-4 shadow-card" key={step}>
                <p class="text-xs font-semibold text-slate-500">Step {index + 1}</p>
                <p class="mt-2 text-sm font-semibold text-slate-900">{step}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="portfolio" class="space-y-8 py-12">
        <div>
          <p class="text-sm font-semibold text-emerald-700">Gallery</p>
          <h2 class="text-3xl font-semibold text-slate-900">Proof across web, product, and AI.</h2>
          <p class="mt-2 text-slate-600">A mix of launch work, portals, and assistant experiences.</p>
        </div>
        <div class="grid gap-4 md:grid-cols-3">
          {gallery.map((item, index) => (
            <div
              class={`group rounded-3xl border border-white/60 bg-white/80 p-5 shadow-card reveal delay-${index + 1}`}
              key={item.title}
            >
              <div class="flex h-40 items-end rounded-2xl bg-gradient-to-br from-slate-900 via-slate-700 to-emerald-600 p-4 text-white">
                <span class="rounded-full bg-white/20 px-3 py-1 text-xs font-semibold">{item.tag}</span>
              </div>
              <p class="mt-4 text-lg font-semibold text-slate-900">{item.title}</p>
              <p class="text-sm text-slate-500">Case study available on request.</p>
            </div>
          ))}
        </div>
      </section>

      <section id="testimonials" class="space-y-8 py-12">
        <div class="text-center">
          <p class="text-sm font-semibold text-emerald-700">Testimonials</p>
          <h2 class="text-3xl font-semibold text-slate-900">What teams say after launch.</h2>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          {testimonials.map((testimonial) => (
            <div class="rounded-3xl bg-white p-6 shadow-card" key={testimonial.name}>
              <p class="text-sm text-slate-600">{testimonial.quote}</p>
              <div class="mt-4">
                <p class="text-sm font-semibold text-slate-900">{testimonial.name}</p>
                <p class="text-xs text-slate-500">{testimonial.role}</p>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section id="contact" class="py-14">
        <div class="rounded-[32px] bg-slate-900 px-8 py-10 text-white shadow-soft">
          <div class="grid gap-6 md:grid-cols-[2fr,1fr] md:items-center">
            <div class="space-y-3">
              <p class="text-sm font-semibold text-emerald-200">Start a project</p>
              <h3 class="text-3xl font-semibold">Share your goal and get a plan in 48 hours.</h3>
              <p class="text-slate-200">We respond within 12 hours. Engagements available this week.</p>
              <div class="flex flex-wrap gap-3">
                <a
                  href="mailto:hello@zaftech.com?subject=Project%20discovery"
                  class="rounded-full bg-white px-5 py-3 text-sm font-semibold text-slate-900 shadow-soft"
                >
                  Email the team
                </a>
                <a
                  href="https://cal.com"
                  class="rounded-full border border-slate-500 px-5 py-3 text-sm font-semibold text-white"
                >
                  Book a 15 min review
                </a>
              </div>
            </div>
            <div class="rounded-2xl border border-white/10 bg-white/5 p-5">
              <p class="text-sm font-semibold text-emerald-200">Preferred projects</p>
              <ul class="mt-3 space-y-2 text-sm text-slate-100">
                <li>Marketing or product web builds</li>
                <li>RAG assistants for support and sales</li>
                <li>WordPress redesigns and migrations</li>
                <li>UX refreshes for key funnels</li>
              </ul>
              <p class="mt-4 text-xs text-slate-400">Minimum engagement: 3k fixed or 40 per hour.</p>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="border-t border-white/60 py-8">
      <div class="mx-auto flex max-w-6xl flex-wrap items-center justify-between gap-4 px-4 text-sm text-slate-600">
        <p>2026 ZafTech. All rights reserved.</p>
        <div class="flex gap-4">
          <a href="#features" class="hover:text-slate-900">Features</a>
          <a href="#services" class="hover:text-slate-900">Services</a>
          <a href="#contact" class="hover:text-slate-900">Contact</a>
        </div>
      </div>
    </footer>
  </div>
</Layout>
