---
import type { Feature } from "@/data/content";

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<section id="features" class="bg-surface py-16">
  <div class="mx-auto max-w-6xl px-4">
    <div class="text-center">
      <p class="text-sm font-semibold text-accent">Features</p>
      <h2 class="text-3xl font-semibold">Full-stack engineering built to scale.</h2>
      <p class="mt-2 text-ink-muted">End-to-end solutions from frontend to cloud infrastructure.</p>
    </div>
    <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
      {features.map((feature: Feature, index: number) => (
        <div class={`rounded-3xl bg-surface-2 p-6 shadow-card reveal delay-${index + 1}`}>
          <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-contrast text-white">
            {index + 1}
          </div>
          <p class="text-lg font-semibold">{feature.title}</p>
          <p class="mt-2 text-sm text-ink-muted">{feature.body}</p>
        </div>
      ))}
    </div>
  </div>
</section>
