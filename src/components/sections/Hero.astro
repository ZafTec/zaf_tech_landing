---
import Threads from "@/components/Threads/Threads.jsx";
---

<section id="hero" class="relative w-full overflow-hidden">
  <div class="absolute inset-0">
    <!-- Background color for contrast -->
    <div class="absolute inset-0 bg-slate-100 dark:bg-[#0c0f17]"></div>
    <!-- Threads: inverted (black) in light mode, normal (white) in dark mode -->
    <div class="absolute inset-0 invert dark:invert-0">
      <Threads
        client:load
        color={[1, 1, 1]}
        amplitude={1}
        distance={0}
        enableMouseInteraction={true}
      />
    </div>
    <!-- Overlay for readability -->
    <div class="absolute inset-0 bg-white/30 dark:bg-black/30"></div>
  </div>
  <div class="relative z-10 mx-auto grid min-h-screen max-w-6xl gap-10 px-4 text-ink dark:text-white lg:grid-cols-[1.1fr,0.9fr]" style="padding-top: 260px; padding-bottom: 100px;">
    <div class="space-y-6">
      <h1 class="text-4xl font-semibold leading-tight md:text-5xl">
        We craft Full-stack applications and Machine Learning solutions.
      </h1>
